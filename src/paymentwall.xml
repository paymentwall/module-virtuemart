<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" group="vmpayment" method="install">
  <name>Paymentwall</name>
  <creationDate>July 18 2014</creationDate>
  <author>Paymentwall Inc.</author>
  <authorUrl>https://www.paymentwall.com</authorUrl>
  <authorEmail>devsupport@paymentwall.com</authorEmail>
  <copyright>Copyright (C) 2010-2014 Paymentwall Inc. All rights reserved.</copyright>
  <license>The MIT License (MIT)</license>
  <version>1.0.0</version>
  <description><![CDATA[<a href="https://paymentwall.com" target="_blank">Paymentwall</a> best payment gateway. ]]></description>
  <files>
    <filename plugin="paymentwall">paymentwall.php</filename>
    <filename>pingback.php</filename>
    <folder>paymentwall_api</folder>
    <folder>language</folder>
  </files>
  <params addpath="/plugins/vmpayment/paymentwall/paymentwall_api" />
  <params>
    <param type="spacer" default="VMPAYMENT_PAYMENTWALL" level="level1" />
    <param name="app_key" type="text" size="50" default="" label="VMPAYMENT_PAYMENTWALL_APP_KEY" description="VMPAYMENT_PAYMENTWALL_APP_KEY_DESC"/>
    <param name="secret_key" type="text" size="50" default="" label="VMPAYMENT_PAYMENTWALL_SECRET_KEY" description="VMPAYMENT_PAYMENTWALL_SECRET_KEY_DESC"/>
    <param name="widget_code" type="text" size="50" default="" label="VMPAYMENT_PAYMENTWALL_WIDGET_CODE" description="VMPAYMENT_PAYMENTWALL_WIDGET_CODE_DESC"/>
    <param name="currency_code" type="text" size="50" default="" label="VMPAYMENT_PAYMENTWALL_CURRENCY_CODE" description="VMPAYMENT_PAYMENTWALL_CURRENCY_CODE_DESC"/>
    <param name="test_mode" type="radio" scope="com_virtuemart" default="0"
               label="VMPAYMENT_PAYMENTWALL_TEST_MODE"
               description="VMPAYMENT_PAYMENTWALL_TEST_MODE_DESC">
              <option value="0">COM_VIRTUEMART_NO</option>
              <option value="1">COM_VIRTUEMART_YES</option>
    </param>
  </params>

</extension>